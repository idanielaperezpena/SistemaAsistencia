<Window x:Class="SA.RegistroNuevos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SA"
        mc:Ignorable="d"
        Title="RegistroNuevos" Height="700" Width="798.931"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Top" 
        WindowStartupLocation="CenterScreen">
    <ScrollViewer Margin="0" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <materialDesign:Card Padding="32" Margin="16,16,16,0" Grid.ColumnSpan="3" Height="88" Grid.RowSpan="2">
                <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}">Registro de Nuevos Alumnos</TextBlock>
            </materialDesign:Card>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Row="2" Grid.ColumnSpan="2" Margin="27,0,370,0">
        Nombre:
            </TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Row="3" Grid.ColumnSpan="2" Margin="27,0,370,0" Text="Apellido Paterno: "/>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Row="4" Grid.ColumnSpan="2" Margin="27,0,370,0" Text="Apellido Materno:"/>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Row="5" RenderTransformOrigin="0.577,1.431" Grid.ColumnSpan="2" Margin="27,0,370,0" Text="Escuela:"/>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Margin="27,20,292,10" Grid.Row="6" Text="Grado:"/>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Margin="188,20,130,10" Grid.Row="6" Text="Grupo:"/>
            <TextBlock Style="{StaticResource MaterialDesignTitleTextBlock}" Grid.Row="5" Grid.Column="1" Margin="122,0,38,0" Text="Seleccione una imagen..."/>
            <TextBox x:Name="txtNombre" materialDesign:HintAssist.Hint="Nombre(s)" Grid.Row="2" Margin="27,30,15,10" />
            <TextBox x:Name="txtApPat" materialDesign:HintAssist.Hint="Apellido Paterno" Grid.Row="3" Margin="27,30,15,10" />
            <TextBox x:Name="txtApMat" materialDesign:HintAssist.Hint="Apellido Materno" Grid.Row="4" Margin="27,30,15,10" />
            <TextBox x:Name="txtEscuela" materialDesign:HintAssist.Hint="Escuela" Grid.Row="5" Margin="27,30,15,10" />
            <TextBox x:Name="txtGrupo" materialDesign:HintAssist.Hint="Grupo" Grid.Row="6" Margin="271,20,45,10" MaxLength="5" RenderTransformOrigin="-0.133,0.56" MaxLines="1" Width="80" VerticalAlignment="Center" HorizontalAlignment="Left" />
            <ComboBox materialDesign:HintAssist.Hint="Grado" MinWidth="25" Margin="100,15,0,12" VerticalAlignment="Center"
  IsEditable="True" Grid.Row="6" HorizontalAlignment="Left">

                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <ListBoxItem Content="1"/>
                <ListBoxItem Content="2"/>
                <ListBoxItem Content="3"/>
                <ListBoxItem Content="4"/>
                <ListBoxItem Content="5"/>
                <ListBoxItem Content="6"/>
                <ListBoxItem Content="7"/>
                <ListBoxItem Content="8"/>
                <ListBoxItem Content="9"/>
                <ListBoxItem Content="10"/>
            </ComboBox>
            <Image Grid.Column="1" HorizontalAlignment="Left" Height="145" Margin="128,10,0,0" Grid.Row="2" Grid.RowSpan="3" VerticalAlignment="Top" Width="158" Source="users/defaultUser.png"/>
            <Button x:Name="btnGuardarUsuario" Style="{StaticResource MaterialDesignRaisedButton}" Width="100" ToolTip="Resource name: MaterialDesignRaisedButton" Grid.Row="7" Grid.Column="1" RenderTransformOrigin="-0.075,0.404" Margin="95,10,202,13" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                Guardar
            </Button>
            <Button x:Name="btnRegresarMenu" Style="{StaticResource MaterialDesignRaisedLightButton}" ToolTip="Resource name: MaterialDesignRaisedLightButton" Grid.Row="7" Grid.Column="1" Margin="0,0,40,15" RenderTransformOrigin="0.5,0.5" Height="31" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnRegresarMenu_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.053"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                Regresar al menú
            </Button>
        </Grid>
    </ScrollViewer>
</Window>
